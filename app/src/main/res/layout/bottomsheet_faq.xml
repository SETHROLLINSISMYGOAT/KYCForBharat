<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Explain This / यह समझाइए"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvFaq1"
        android:text="Q: Why do you need my face?\nA: To match with the document and prevent fraud."
        android:textSize="15sp"
        android:textColor="#424242"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvFaq2"
        android:text="Q: What is DigiLocker?\nA: Government service to store official documents."
        android:textSize="15sp"
        android:textColor="#424242"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnCloseFaq"
        android:text="Close / बंद करें"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#9E9E9E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
