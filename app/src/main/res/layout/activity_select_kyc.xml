<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Choose KYC Method / KYC तरीका चुनें"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnDigiLocker"
        android:text="DigiLocker (Recommended) / DigiLocker (अनुशंसित)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF8A65"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnAadhaar"
        android:text="Aadhaar (Document) / आधार"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnPAN"
        android:text="PAN / पैन"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#29B6F6"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnDL"
        android:text="Driving License / ड्राइविंग लाइसेंस"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#9CCC65"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnVoter"
        android:text="Voter ID / मतदाता पहचान पत्र"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#AB47BC"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
