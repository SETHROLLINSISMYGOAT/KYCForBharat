<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#F5F5F5"
    tools:context=".ReviewActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Review &amp; Confirm"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_summary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Please review your captured documents below."
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Document Review -->
            <LinearLayout
                android:id="@+id/card_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_card"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Capture"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_doc_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Document Type: PAN"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_front_doc"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:background="#E0E0E0"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:contentDescription="Front of the document" />

                    <ImageView
                        android:id="@+id/img_back_doc"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:scaleType="centerCrop"
                        android:background="#E0E0E0"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:contentDescription="Back of the document" />
                </LinearLayout>

            </LinearLayout>

            <!-- Face Review -->
            <LinearLayout
                android:id="@+id/card_face"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_card"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Face Capture"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/img_face"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image"
                    android:padding="2dp"
                    android:contentDescription="User's face photo"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_face_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="Face not captured"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Buttons -->
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Confirm &amp; Submit"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="12dp"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="12dp"
        app:cornerRadius="8dp" />

</LinearLayout>
