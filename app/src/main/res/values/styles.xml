
<resources>

    <style name="Theme.KycApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#424242</item>

    </style>


    <style name="KycHeadlineText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="KycBodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="KycTipText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#616161</item>
    </style>

    <style name="KycButtonBase">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">#1976D2</item>
    </style>

    <style name="KycButton.Primary" parent="KycButtonBase">
        <item name="android:backgroundTint">#4CAF50</item>
    </style>

    <style name="KycButton.Secondary" parent="KycButtonBase">
        <item name="android:backgroundTint">#FFC107</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="KycButton.Danger" parent="KycButtonBase">
        <item name="android:backgroundTint">#F44336</item>
    </style>

    <style name="KycButton.Info" parent="KycButtonBase">
        <item name="android:backgroundTint">#29B6F6</item>
    </style>

    <style name="KycButton.Neutral" parent="KycButtonBase">
        <item name="android:backgroundTint">#9E9E9E</item>
    </style>

</resources>
